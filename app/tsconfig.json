{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "lib": ["es2015"],
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}